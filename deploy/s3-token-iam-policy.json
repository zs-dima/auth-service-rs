{
 "Version": "2012-10-17",
 "Statement": [
  {
   "Sid": "AllowPutAvatars",
   "Effect": "Allow",
   "Action": [
    "s3:PutObject"
   ],
   "Resource": [
    "arn:aws:s3:::auth-avatars/users/*"
   ]
  },
  {
   "Sid": "AllowGetAvatars",
   "Effect": "Allow",
   "Action": [
    "s3:GetObject"
   ],
   "Resource": [
    "arn:aws:s3:::auth-avatars/users/*"
   ]
  },
  {
   "Sid": "AllowGetAvatars",
   "Effect": "Allow",
   "Action": [
    "s3:DeleteObject"
   ],
   "Resource": [
    "arn:aws:s3:::auth-avatars/users/*"
   ]
  }
 ]
}