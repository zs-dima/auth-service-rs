{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "GetBucketLocationBackup",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::backup"
            ]
        },
        {
            "Sid": "ListEntireBucket",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket", 
                "s3:ListBucketVersions"
            ],
            "Resource": [
                "arn:aws:s3:::backup"
            ]
        },
        {
            "Sid": "ReadWriteAllObjectsInBucket",
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject",
                "s3:GetObjectVersion",
                "s3:DeleteObjectVersion"
            ],
            "Resource": [
                "arn:aws:s3:::backup/*"
            ]
        }
    ]
}